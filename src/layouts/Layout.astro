---
import '@/styles/global.css';
import Header from '../components/Header.astro';
import WhatsAppButton from '@/components/WhatsAppButton.astro';
import Footer from '@/components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A CMT12 foi criada pelo Mestre Clayton Mangueira. Aqui você aprende e mantém seu condicionamento físico no Boxe, Muay Thai, MMA, Luta Livre, Luta Olímpica e Jiu Jitsu." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-secondary">
    <Header />
		<slot />
    <WhatsAppButton />
    <Footer />
    <script src="https://kit.fontawesome.com/3ccb1d9e4c.js" crossorigin="anonymous"></script>
	</body>
</html>
