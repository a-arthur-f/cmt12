---
const {title, img, imgAlt} = Astro.props;
---

<div class="md:container md:px-20">
  <div class="bg-primary flex flex-col items-center mb-8 md:mt-[2rem] md:rounded overflow-hidden">
    <img class="w-full" src={img} alt={imgAlt}/>
    <h1 class="text-6xl text-center text-white uppercase py-3 lato-regular tracking-[.2rem] md:py-10">{title}</h1>
  </div>
  <div class="content px-6 text-white md:container md:text-xl">
    <slot/>
  </div>
</div>

<style>
  .content {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }
</style>
