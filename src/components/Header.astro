---
import { Image } from 'astro:assets';
import Menu from '@/components/Menu.tsx';
---

<header class="sticky flex justify-between items-center text-white text-2xl top-0 left-0 bg-primary px-5 py-4 z-50 lg:py-8 md:px-9">
  <div>
    <a href="/">
      <Image src='/images/logo.png' width="96" height="96" alt="logo cmt12" /> 
    </a>
  </div>
  <div class="md:hidden">
    <Menu client:load/>
  </div>
  <nav class="hidden md:block">
    <ul class="uppercase flex gap-7 text-xl items-center">
      <li>
        <a href="/equipe">A equipe</a>
      </li>
      <li>
        <a href="/o-mestre">O mestre</a>
      </li>
      <li>
        <div class="nav-menu cursor-pointer relative">
          Treinos
          <i class="fa-solid fa-caret-down ml-2"></i>
          <ul class="absolute w-100 hidden bg-primary p-5 space-y-3">
            <li>
              <a href="/boxe">
                Boxe 
              </a>
            </li>
            <li>
              <a href="/jiujitsu">
                Jiu Jitsu 
              </a>
            </li>
            <li>
              <a href="/muaythai">
                Muay Thai 
              </a>
            </li>
          </ul>
        </div>
      </li>
    </ul>
  </nav>
</header>

<style>
  nav {
    li {
      &:hover {
        border-bottom: 1px solid #fff;
      }
    }
  }

  .nav-menu {
    &:hover {
      ul {
        display: block;
      }
    }
  }
</style>
